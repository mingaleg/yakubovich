#!/bin/bash

NAME="yakubovich"                                  # Name of the application
DJANGODIR=/webapps/yaku/yakubovich             # Django project directory
SOCKFILE=/webapps/yaku/run/gunicorn.sock  # we will communicte using this unix socket
USER=yaku                                        # the user to run as
GROUP=webapps                                     # the group to run as
NUM_WORKERS=6                                     # how many worker processes should Gunicorn spawn
DJANGO_SETTINGS_MODULE=yakubovich.settings             # which settings file should Django use
DJANGO_WSGI_MODULE=yakubovich.wsgi                     # WSGI module name

echo "Starting $NAME as `whoami`"

# Activate the virtual environment
cd $DJANGODIR
source ../bin/activate
export DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE
export PYTHONPATH=$DJANGODIR:$PYTHONPATH

# Create the run directory if it doesn't exist
RUNDIR=$(dirname $SOCKFILE)
test -d $RUNDIR || mkdir -p $RUNDIR

# Start your Django Unicorn
# Programs meant to be run under supervisor should not daemonize themselves (do not use --daemon)
exec ../bin/gunicorn ${DJANGO_WSGI_MODULE}:application \
  --name $NAME \
  --workers $NUM_WORKERS \
  --user=$USER --group=$GROUP \
  --bind=unix:$SOCKFILE \
  --log-level=debug \
  --log-file=-
